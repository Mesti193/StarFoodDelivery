<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.06"
            android:orientation="vertical"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.94"
            android:orientation="vertical"/>

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/ic_arrow_back_black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvNewCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/add_new_card.title"
            android:textStyle="bold"
            android:textColor="@color/dark_grey"
            android:textSize="22sp"
            android:textAllCaps="true"
            app:layout_constraintTop_toBottomOf="@+id/ivBack"
            app:layout_constraintStart_toStartOf="@+id/ivBack"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvManageAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/payment_methods.subtitle"
            android:textColor="@color/grey"
            android:textSize="16sp"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/tvNewCard"
            app:layout_constraintStart_toStartOf="@+id/ivBack"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btAddCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/splash_screen.bg"
            android:text="@string/add_new_card.apply"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@+id/tvManageAddress"
            app:layout_constraintStart_toStartOf="@+id/glStart"
            app:layout_constraintEnd_toEndOf="@+id/glEnd"/>

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="32dp"
            app:srcCompat="@drawable/ic_visa"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintTop_toBottomOf="@id/btAddCard"
            app:layout_constraintStart_toStartOf="@id/glStart"
            app:layout_constraintEnd_toStartOf="@+id/iv2"/>

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/ic_mastercard"
            app:layout_constraintTop_toTopOf="@+id/iv1"
            app:layout_constraintStart_toEndOf="@+id/iv1"
            app:layout_constraintEnd_toStartOf="@+id/iv3"/>

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/ic_discover"
            app:layout_constraintTop_toTopOf="@+id/iv1"
            app:layout_constraintStart_toEndOf="@+id/iv2"
            app:layout_constraintEnd_toStartOf="@+id/iv4"/>

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/ic_paypal"
            app:layout_constraintTop_toTopOf="@+id/iv1"
            app:layout_constraintStart_toEndOf="@+id/iv3"
            app:layout_constraintEnd_toStartOf="@+id/iv5"/>

        <ImageView
            android:id="@+id/iv5"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/ic_citi"
            app:layout_constraintTop_toTopOf="@+id/iv1"
            app:layout_constraintStart_toEndOf="@+id/iv4"
            app:layout_constraintEnd_toEndOf="@id/glEnd"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>