<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.06"
            android:orientation="vertical"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.94"
            android:orientation="vertical"/>

        <ImageView
            android:id="@+id/ivTest1"
            android:layout_width="156dp"
            android:layout_height="156dp"
            android:layout_marginTop="24dp"
            android:background="@color/home.restaurant_placeholder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/glStart"
            app:layout_constraintEnd_toStartOf="@+id/ivTest2" />

        <ImageView
            android:id="@+id/ivTest2"
            android:layout_width="156dp"
            android:layout_height="156dp"
            android:layout_marginTop="24dp"
            android:background="@color/home.restaurant_placeholder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivTest1"
            app:layout_constraintEnd_toEndOf="@+id/glEnd"/>

        <ImageView
            android:id="@+id/ivTest3"
            android:layout_width="156dp"
            android:layout_height="156dp"
            android:layout_marginTop="16dp"
            android:background="@color/home.restaurant_placeholder"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintTop_toBottomOf="@+id/ivTest1"
            app:layout_constraintStart_toStartOf="@id/glStart"
            app:layout_constraintEnd_toStartOf="@+id/ivTest4" />

        <ImageView
            android:id="@+id/ivTest4"
            android:layout_width="156dp"
            android:layout_height="156dp"
            android:layout_marginTop="16dp"
            android:background="@color/home.restaurant_placeholder"
            app:layout_constraintTop_toBottomOf="@+id/ivTest2"
            app:layout_constraintStart_toEndOf="@+id/ivTest3"
            app:layout_constraintEnd_toEndOf="@+id/glEnd"/>

        <TextView
            android:id="@+id/tvTopNearYou"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Top 47 Restaurants near you"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/ivTest3"
            app:layout_constraintStart_toStartOf="@+id/glStart"
            app:layout_constraintEnd_toStartOf="@+id/ivFilter"/>

        <ImageView
            android:id="@+id/ivFilter"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            app:srcCompat="@drawable/ic_filter"
            app:layout_constraintTop_toTopOf="@+id/tvTopNearYou"
            app:layout_constraintEnd_toStartOf="@+id/tvFilter"
            app:layout_constraintBottom_toBottomOf="@+id/tvTopNearYou"/>

        <TextView
            android:id="@+id/tvFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home.filter"
            android:textColor="@color/dark_grey"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/tvTopNearYou"
            app:layout_constraintEnd_toEndOf="@+id/glEnd"
            app:layout_constraintBottom_toBottomOf="@+id/tvTopNearYou"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTopRestaurantsNear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTopNearYou"
            app:layout_constraintStart_toStartOf="@+id/glStart"
            app:layout_constraintEnd_toEndOf="@+id/glEnd"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>